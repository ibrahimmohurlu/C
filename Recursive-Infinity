#include <stdio.h>
#include <stdlib.h>
//float num=0;
void infinity(void);

int main(void) {
	int decision;
	printf("Enter 1 to start infinite loop ->");scanf("%d",&decision);
	
	 if(decision == 1){
	   infinity();
	  }
	 else
	   printf("Program will be shutdown");
	getch();
	return 0;
}


void infinity(void){
	printf(" recursive infinity");
	//printf("%f\n",num);
	//num+=0.000001;
	infinity();
	
}
